a= input("enter your chose  1 = + ,2 = - , 3= * , 4 =/ ,    =    ")
b=int(input("enter frist number     =         "))
c=int(input("enter second number         =       "))
if a=="1" : print("    =      ",b+c)
elif a=="2": print("    =      ",b-c)
elif a =="3" : print("    =      ",b*c)
elif a =="4" : print("    =      ",b/c)
else: print("enter wrong")
